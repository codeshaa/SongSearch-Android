<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#2E86C1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shaanz.songsearch.MainActivity">

    <View
        android:id="@+id/viewSearch"
        android:layout_width="@dimen/textSearchWidth"
        android:layout_height="@dimen/textSearchHeight"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="@dimen/textSearchWidth"
        android:layout_height="@dimen/textSearchHeight"
        android:hint="@string/search_hint"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:background="@null"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editTextSearch" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="5dp"
        android:background="@color/colorPrimaryDark"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/editTextSearch"
        android:id="@+id/btnSearch" />

    <ListView
        android:id="@+id/listViewSearch"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/viewSearch"
        android:layout_marginTop="5dp"
        android:dividerHeight="1dp"
        android:divider="#FFFFFF"/>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btnSearch"
        android:layout_toStartOf="@+id/btnSearch"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:id="@+id/progressBar" />

</RelativeLayout>
