<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#18c2d5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shaanz.songsearch.MainActivity">


    <View
        android:id="@+id/viewSearch"
        android:layout_width="@dimen/textSearchWidth"
        android:layout_height="@dimen/textSearchHeight"
        android:background="#FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/btnSearch"
        android:layout_toStartOf="@+id/btnSearch" />

    <EditText
        android:layout_width="@dimen/textSearchWidth"
        android:layout_height="@dimen/textSearchHeight"
        android:background="@null"
        android:hint="@string/search_hint"
        android:focusableInTouchMode="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editTextSearch"
        android:layout_toStartOf="@+id/btnSearch"
        android:textColor="@android:color/holo_blue_light"
        android:layout_toLeftOf="@+id/btnSearch" />

    <Button
        android:text="@string/icon_search"
        android:layout_width="60dp"
        android:layout_height="@dimen/textSearchHeight"
        android:layout_marginLeft="2dp"
        android:textColor="#167816"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:id="@+id/btnSearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/listView" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/viewSearch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/listView" />

    <ProgressBar
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_marginTop="166dp"
        android:layout_below="@+id/viewSearch"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
